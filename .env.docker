# Docker Environment Configuration
# Copy this file to .env for Docker usage

# ============================================
# Application Settings
# ============================================
IMAGE_CONVERTER_ENV=development
IMAGE_CONVERTER_DEBUG=true
IMAGE_CONVERTER_LOG_LEVEL=INFO
IMAGE_CONVERTER_APP_NAME=Image Converter

# ============================================
# API Configuration
# ============================================
IMAGE_CONVERTER_API_HOST=0.0.0.0
IMAGE_CONVERTER_API_PORT=8000
IMAGE_CONVERTER_API_WORKERS=2
IMAGE_CONVERTER_API_PREFIX=/api

# ============================================
# Security Settings
# ============================================
IMAGE_CONVERTER_SECRET_KEY=change-this-in-production-to-a-random-string
IMAGE_CONVERTER_CORS_ORIGINS=http://localhost:5173,http://localhost:3000,http://localhost
IMAGE_CONVERTER_MAX_REQUEST_SIZE=104857600
IMAGE_CONVERTER_RATE_LIMIT_PER_MINUTE=60

# ============================================
# File Processing
# ============================================
IMAGE_CONVERTER_MAX_UPLOAD_SIZE=104857600
IMAGE_CONVERTER_MAX_FILE_SIZE=52428800
IMAGE_CONVERTER_ALLOWED_INPUT_FORMATS=jpg,jpeg,png,gif,webp,bmp,tiff,heic,heif,avif
IMAGE_CONVERTER_ALLOWED_OUTPUT_FORMATS=webp,avif,jpeg,png,heif,jxl,webp2,jp2
IMAGE_CONVERTER_TEMP_DIR=/tmp/image-converter
IMAGE_CONVERTER_CLEANUP_INTERVAL=3600

# ============================================
# Performance Settings
# ============================================
IMAGE_CONVERTER_CONVERSION_TIMEOUT=30
IMAGE_CONVERTER_MAX_CONCURRENT_CONVERSIONS=10
IMAGE_CONVERTER_MEMORY_LIMIT_MB=512
IMAGE_CONVERTER_CPU_LIMIT_PERCENT=80

# ============================================
# Sandboxing Configuration
# ============================================
IMAGE_CONVERTER_ENABLE_SANDBOXING=true
IMAGE_CONVERTER_SANDBOX_STRICTNESS=standard
# IMAGE_CONVERTER_SANDBOX_UID=1000
# IMAGE_CONVERTER_SANDBOX_GID=1000

# ============================================
# ML Models Configuration
# ============================================
IMAGE_CONVERTER_ML_MODELS_PATH=/app/ml_models
IMAGE_CONVERTER_ENABLE_AI_FEATURES=true
IMAGE_CONVERTER_MODEL_CACHE_SIZE=2
IMAGE_CONVERTER_CONTENT_DETECTION_MODEL=content_classifier.onnx
IMAGE_CONVERTER_QUALITY_PREDICTION_MODEL=quality_predictor.onnx

# ============================================
# Database Configuration
# ============================================
IMAGE_CONVERTER_DATABASE_URL=sqlite:///./data/app.db
IMAGE_CONVERTER_DATABASE_POOL_SIZE=5
IMAGE_CONVERTER_DATABASE_POOL_TIMEOUT=30

# ============================================
# Batch Processing
# ============================================
IMAGE_CONVERTER_MAX_BATCH_SIZE=100
IMAGE_CONVERTER_BATCH_WEBSOCKET_AUTH_ENABLED=true
IMAGE_CONVERTER_ENABLE_BATCH_PROCESSING=true
IMAGE_CONVERTER_ENABLE_WEBSOCKET_PROGRESS=true

# ============================================
# Privacy Settings
# ============================================
IMAGE_CONVERTER_STRIP_METADATA_DEFAULT=true
IMAGE_CONVERTER_ANONYMIZE_LOGS=true
IMAGE_CONVERTER_RETAIN_HISTORY_DAYS=30

# ============================================
# Logging Configuration
# ============================================
IMAGE_CONVERTER_LOGGING_ENABLED=true
IMAGE_CONVERTER_LOG_DIR=/app/logs
IMAGE_CONVERTER_MAX_LOG_SIZE_MB=10
IMAGE_CONVERTER_LOG_BACKUP_COUNT=3
IMAGE_CONVERTER_LOG_RETENTION_HOURS=24

# ============================================
# Network Isolation
# ============================================
IMAGE_CONVERTER_NETWORK_VERIFICATION_ENABLED=true
IMAGE_CONVERTER_NETWORK_VERIFICATION_STRICTNESS=standard
IMAGE_CONVERTER_NETWORK_MONITORING_ENABLED=false
IMAGE_CONVERTER_NETWORK_MONITORING_INTERVAL=5
IMAGE_CONVERTER_TERMINATE_ON_NETWORK_VIOLATION=false

# ============================================
# Feature Flags
# ============================================
IMAGE_CONVERTER_ENABLE_PRESET_SHARING=false
IMAGE_CONVERTER_ENABLE_HISTORY_TRACKING=true