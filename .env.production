# Production Environment Configuration
# IMPORTANT: Keep this file secure and never commit to version control

# ============================================
# Application Settings
# ============================================
IMAGE_CONVERTER_ENV=production
IMAGE_CONVERTER_DEBUG=false
IMAGE_CONVERTER_LOG_LEVEL=WARNING
IMAGE_CONVERTER_APP_NAME=Image Converter

# ============================================
# API Configuration
# ============================================
IMAGE_CONVERTER_API_HOST=0.0.0.0
IMAGE_CONVERTER_API_PORT=8000
IMAGE_CONVERTER_API_WORKERS=4
IMAGE_CONVERTER_API_PREFIX=/api

# ============================================
# Security Settings (CHANGE THESE!)
# ============================================
IMAGE_CONVERTER_SECRET_KEY=CHANGE_THIS_TO_A_SECURE_RANDOM_SECRET_KEY_IN_PRODUCTION
IMAGE_CONVERTER_CORS_ORIGINS=https://yourdomain.com
IMAGE_CONVERTER_MAX_REQUEST_SIZE=104857600
IMAGE_CONVERTER_RATE_LIMIT_PER_MINUTE=30
IMAGE_CONVERTER_MAX_REQUESTS_PER_HOUR=500

# ============================================
# File Processing
# ============================================
IMAGE_CONVERTER_MAX_UPLOAD_SIZE=52428800
IMAGE_CONVERTER_MAX_FILE_SIZE=52428800
IMAGE_CONVERTER_ALLOWED_INPUT_FORMATS=jpg,jpeg,png,gif,webp,bmp,tiff,heic,heif,avif
IMAGE_CONVERTER_ALLOWED_OUTPUT_FORMATS=webp,avif,jpeg,png,heif
IMAGE_CONVERTER_TEMP_DIR=/tmp/image-converter
IMAGE_CONVERTER_CLEANUP_INTERVAL=1800

# ============================================
# Performance Settings (Production Optimized)
# ============================================
IMAGE_CONVERTER_CONVERSION_TIMEOUT=20
IMAGE_CONVERTER_MAX_CONCURRENT_CONVERSIONS=20
IMAGE_CONVERTER_MEMORY_LIMIT_MB=256
IMAGE_CONVERTER_CPU_LIMIT_PERCENT=60

# ============================================
# Sandboxing Configuration (Strict for Production)
# ============================================
IMAGE_CONVERTER_ENABLE_SANDBOXING=true
IMAGE_CONVERTER_SANDBOX_STRICTNESS=strict
IMAGE_CONVERTER_SANDBOX_UID=1000
IMAGE_CONVERTER_SANDBOX_GID=1000

# ============================================
# ML Models Configuration
# ============================================
IMAGE_CONVERTER_ML_MODELS_PATH=/app/ml_models
IMAGE_CONVERTER_ENABLE_AI_FEATURES=true
IMAGE_CONVERTER_MODEL_CACHE_SIZE=4

# ============================================
# Database Configuration
# ============================================
IMAGE_CONVERTER_DATABASE_URL=sqlite:///./data/app.db
IMAGE_CONVERTER_DATABASE_POOL_SIZE=10
IMAGE_CONVERTER_DATABASE_POOL_TIMEOUT=30

# ============================================
# Batch Processing
# ============================================
IMAGE_CONVERTER_MAX_BATCH_SIZE=50
IMAGE_CONVERTER_BATCH_WEBSOCKET_AUTH_ENABLED=true
IMAGE_CONVERTER_ENABLE_BATCH_PROCESSING=true
IMAGE_CONVERTER_ENABLE_WEBSOCKET_PROGRESS=true

# ============================================
# Privacy Settings (Strict for Production)
# ============================================
IMAGE_CONVERTER_STRIP_METADATA_DEFAULT=true
IMAGE_CONVERTER_ANONYMIZE_LOGS=true
IMAGE_CONVERTER_RETAIN_HISTORY_DAYS=7

# ============================================
# Logging Configuration (Production)
# ============================================
IMAGE_CONVERTER_LOGGING_ENABLED=true
IMAGE_CONVERTER_LOG_DIR=/app/logs
IMAGE_CONVERTER_MAX_LOG_SIZE_MB=50
IMAGE_CONVERTER_LOG_BACKUP_COUNT=5
IMAGE_CONVERTER_LOG_RETENTION_HOURS=168

# ============================================
# Network Isolation (Strict for Production)
# ============================================
IMAGE_CONVERTER_NETWORK_VERIFICATION_ENABLED=true
IMAGE_CONVERTER_NETWORK_VERIFICATION_STRICTNESS=strict
IMAGE_CONVERTER_NETWORK_MONITORING_ENABLED=true
IMAGE_CONVERTER_NETWORK_MONITORING_INTERVAL=5
IMAGE_CONVERTER_TERMINATE_ON_NETWORK_VIOLATION=true

# ============================================
# Feature Flags (Production)
# ============================================
IMAGE_CONVERTER_ENABLE_PRESET_SHARING=false
IMAGE_CONVERTER_ENABLE_HISTORY_TRACKING=true