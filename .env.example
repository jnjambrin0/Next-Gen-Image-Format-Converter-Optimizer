# Environment Configuration
# Copy this file to .env and update with your values

# Application
ENV=development
DEBUG=true
LOG_LEVEL=INFO

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1

# Security
SECRET_KEY=your-secret-key-here-change-in-production
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# File Processing
MAX_UPLOAD_SIZE=104857600  # 100MB in bytes
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,webp,bmp,tiff,heic,heif,avif
TEMP_DIR=/tmp/image-converter
CLEANUP_INTERVAL=3600  # seconds

# Performance
CONVERSION_TIMEOUT=300  # seconds
MAX_CONCURRENT_CONVERSIONS=4
MEMORY_LIMIT_MB=512

# ML Models
ML_MODELS_PATH=./ml_models
ENABLE_AI_FEATURES=true
MODEL_CACHE_SIZE=2

# Database (for presets/history)
DATABASE_URL=sqlite:///./app.db
DATABASE_POOL_SIZE=5

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Feature Flags
ENABLE_BATCH_PROCESSING=true
ENABLE_WEBSOCKET_PROGRESS=true
ENABLE_PRESET_SHARING=false

# Development
RELOAD=true
PROFILING=false